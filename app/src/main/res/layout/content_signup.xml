<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SignupActivity"
    android:background="@color/backgroundColor">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrappername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edittext_name"
            android:hint="@string/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:maxLines="1"
        />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapperemail"
        android:layout_below="@+id/wrappername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edittext_email"
            android:hint="@string/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_name"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:inputType="textWebEmailAddress"

        />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapperpassword"
        android:layout_below="@+id/wrapperemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edittext_password"
            android:hint="@string/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_email"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:maxLines="1"
        />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrappercpassword"
        android:layout_below="@+id/wrapperpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/edittext_cPassword"
            android:hint="@string/edittext_cPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_password"
            android:inputType="textPassword"
            android:maxLines="1"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/button_register"
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/wrappercpassword"
        android:background="@drawable/roundedbutton_normal"

        />
    <TextView
        android:id="@+id/textview_backtologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backtologin"
        android:textSize="20dp"
        android:layout_below="@+id/button_signup"
        android:padding="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/textview_signinalert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backtologin"
        android:textSize="20dp"
        android:layout_below="@+id/button_signup"
        android:padding="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"

        />


    <TextView
        android:id="@+id/textview_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewsignin"
        android:textSize="20dp"
        android:layout_below="@+id/textview_signinalert"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"


        />



</RelativeLayout>
