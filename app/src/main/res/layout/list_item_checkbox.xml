<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:layout_marginEnd="@dimen/spacing_16dp"
        android:layout_marginLeft="@dimen/spacing_16dp"
        android:layout_marginRight="@dimen/spacing_16dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginTop="@dimen/spacing_16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/dialog_CardsColor"
        app:cardCornerRadius="@dimen/spacing_8dp"
        app:cardElevation="@dimen/spacing_4dp"


        >


        <!--<FrameLayout
            android:id="@+id/frameLayoutBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter">
            -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginLeft="@dimen/spacing_16dp"
            android:layout_marginStart="@dimen/spacing_16dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:buttonTint="@color/colorSecondary2"

            />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary2"
            android:layout_marginBottom="@dimen/spacing_4dp"
            android:layout_marginLeft="@dimen/spacing_72dp"
            android:layout_marginStart="@dimen/spacing_72dp"
            android:layout_marginTop="@dimen/spacing_4dp"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_4dp"
            />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete_icon"
                android:backgroundTint="@color/colorAccent"
                android:tint="@color/colorSecondary2"
                android:layout_toRightOf="@+id/textView1"
                android:layout_marginLeft="@dimen/spacing_100dp"
                android:layout_marginBottom="@dimen/spacing_4dp"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/spacing_4dp"


                />

        </RelativeLayout>
    <!--       </FrameLayout> -->
    </android.support.v7.widget.CardView>

</LinearLayout>
